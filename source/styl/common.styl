body
  margin 0

section
footer
  min-height 200px

h1,h2,h3,h4,span,a,p
  font-family $gotham, sans-serif
  color $white
  font-weight 400


// clearfix
.cf:before,
.cf:after
  content " "
  display table

.cf
  *
    zoom 1
  &:after
    clear both

.start-trial
  background-color $red
  text-decoration none
  padding 10px 0
  text-align center
  font-weight 500
  width 200px
  margin 0 auto
  display block

.section-title
  text-align center

.section-title__dark
  color $black

.adaptive-container
  margin 0 auto
  max-width 960px
