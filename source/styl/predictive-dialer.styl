.predictive-dialer
  background-color $gray

.predictive-dialer__benefit-container
  display inline-block
  width 100%
  float left
  position relative
  @media(min-width 768px)
    width 50%

.predictive-dialer__bonefit-image
  color $black
  height 60px
  width auto
  margin 0 auto 25px
  display block
  @media(min-width 768px)
    height 100px
    margin 0 0 25px
  @media(min-width 1024px)
    position absolute
    top 0
    left 105px
  @media(min-width 1170px)
    left 90px

.predictive-dialer__bonefit-header
  color $black
  font-size 26px
  line-height 24px
  text-align center
  @media(min-width 768px)
    font-size 30px
    line-height 24px
    text-align left
  @media(min-width 1024px)
    margin-left 240px
    margin-top 0
  @media(min-width 1170px)
    max-width 327px

.predictive-dialer__bonefit-description
  color $black
  font-size 18px
  line-height 26px
  text-align center
  display block
  margin-bottom 26px
  @media(min-width 768px)
    font-size 20px
    line-height 26px
    text-align left
  @media(min-width 1024px)
    margin-left 240px
    max-width 260px
  @media(min-width 1170px)
    max-width 327px

.predictive-dialer__bonefit-paragraph
  color $black
  font-size 14px
  line-height 24px
  margin 0 23px 52px
  text-align center
  @media(min-width 768px)
    font-size 15px
    text-align left
    margin-left 0
  @media(min-width 1024px)
    margin-left 240px
    max-width 260px
  @media(min-width 1170px)
    max-width 327px
